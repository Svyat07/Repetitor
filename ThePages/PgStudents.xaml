      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_004_15Repetitor_26_01_23.ThePages"
      mc:Ignorable="d" 
      
      Title="PgStudents">

    <Grid>
        <TextBlock HorizontalAlignment="Center"
