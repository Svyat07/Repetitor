<Page x:Class="_004_15Repetitor_26_01_23.ThePages.PgEditName"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_004_15Repetitor_26_01_23.ThePages"
      mc:Ignorable="d" 
      Title="PgEditName">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Label FontWeight="Bold"
                   FontFamily="Roboto"
                   Margin="5">Введите новое имя</Label>
            <TextBox x:Name="tbName"
                     Style="{StaticResource BaseTextBox}">
            </TextBox>
            <Button x:Name="BtnEdit"
                    Style="{StaticResource BtnBase}"
                    Margin="10"
                    Content="Применить"
                    Click="BtnEdit_Click"></Button>
        </StackPanel>
        <Button x:Name="BtnBack"
                Style="{StaticResource BtnClose}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="BtnBack_Click"/>
    </Grid>
</Page>
